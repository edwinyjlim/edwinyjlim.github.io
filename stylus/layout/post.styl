.post

  h2 
    border-bottom 2px dashed grey
    margin-top 4rem
    margin-bottom 1.5rem
    width: 65%



.stytch-container
  display flex
  overflow auto

  .stytch-instruction
    font-size 1.4rem
    vertical-align middle
    padding 100px 0

  #stytch-magic-link
    padding-left 220px
    transition all 0.50s ease 

    &.sticky
      position absolute
      width auto

  .stytch-block
    width 50%