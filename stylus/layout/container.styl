.container
  //margin 0 auto
  margin-left 240px
  padding 1rem
  padding-bottom 2.5rem
  max-width breakpoints.lg
  width calc(100% - 2rem)

  @media screen and (max-width breakpoints.sm)
    margin 0 auto
    max-width breakpoints.sm - 10px
  @media screen and (max-width breakpoints.xsm)
    margin 0 auto
    max-width breakpoints.xsm - 10px


.container-sm
  @extend .container
  max-width breakpoints.sm

.container-md
  @extend .container
  max-width breakpoints.md

