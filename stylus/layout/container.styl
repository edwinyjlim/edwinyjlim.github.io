.container
  padding 1rem
  padding-bottom 2.5rem
  max-width breakpoints.lg
  width calc(100% - 2rem)
  margin 0 auto
  
  &.post
    margin-left 240px

    @media screen and (max-width breakpoints.sm)
      margin 0 auto
      max-width breakpoints.sm - 20px
    @media screen and (max-width breakpoints.xsm)
      margin 0 auto
      max-width breakpoints.xsm - 20px


.container-sm
  @extend .container
  max-width breakpoints.sm

.container-md
  @extend .container
  max-width breakpoints.md

